<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRateType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16"
        android:text="@string/lbl_rate_type"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnPieceRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rate_type_btn"
        android:backgroundTint="@color/bg_btn_rate_type"
        android:text="@string/lbl_piece_rate"
        android:textAllCaps="true"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/btnWages"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRateType"
        android:gravity="center"
        android:paddingVertical="@dimen/padding_12"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginVertical="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:textColor="@color/btn_text"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnWages"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rate_type_btn"
        android:backgroundTint="@color/bg_btn_rate_type"
        android:text="@string/lbl_wages"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="@id/btnPieceRate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnPieceRate"
        app:layout_constraintTop_toTopOf="@id/btnPieceRate"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingVertical="@dimen/padding_12"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginStart="@dimen/margin_8dp"
        android:textColor="@color/btn_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>